<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@xml/splash_background</item>
    </style>

    <style name="Horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black_opacity_60</item>
    </style>

    <style name="ImageBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_small</item>
    </style>

    <style name="Table">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Table.Narrow">
        <item name="android:layout_height">@dimen/table_narrow</item>
    </style>

    <style name="Table.Normal">
        <item name="android:layout_height">@dimen/table_normal</item>
    </style>

    <style name="Table.Double">
        <item name="android:layout_height">@dimen/table_double</item>
    </style>

    <style name="Table.Image">
        <item name="android:layout_height">@dimen/table_image</item>
    </style>

    <style name="TableImage">
        <item name="android:layout_width">108dp</item>
        <item name="android:layout_height">108dp</item>
    </style>

    <style name="BackDrop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BackDrop.White">
        <item name="android:background">@drawable/shape_drop_bar_white</item>
    </style>

    <style name="BackDrop.Main">
        <item name="android:background">@drawable/shape_drop_bar_main</item>
    </style>

    <style name="BackDrop.White.Arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_small</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:src">@drawable/ic_arrow_up_black_24dp</item>
    </style>

    <style name="BackDrop.Main.Arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_small</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:src">@drawable/ic_arrow_up_white_24dp</item>
    </style>

    <style name="BasicEt">
        <item name="android:layout_width">@dimen/search_et</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BasicBtn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
      
    <style name="BasicTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BasicTv.HeadlineM">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BasicTv.HeadlineS">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="BasicTv.HeadlineXS">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BasicTv.BodyL">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BasicTv.BodyMB">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="BasicTv.BodyM">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BasicTv.BodyS">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BasicTv.BodyM.Transparent">
        <item name="android:background">@color/main_color_variation</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FloatingButton.Filter">
        <item name="android:colorAccent">@color/main_color_variation</item>
        <item name="android:backgroundTint">@color/main_color_variation</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>

    <style name="FloatingButton.Filter.OpenMode">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>
    
    <style name="FloatingButton.Filter.CloseMode">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>

    <style name="FilterTextView" parent="BasicTv.BodyM.Transparent"/>

    <style name="FilterTextView.OpenMode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>
        
    <style name="FilterTextView.CloseMode">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">0dp</item>

    </style>
        
    <style name="RvText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Detail_Review_Comment">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">33sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="BasicTv.BodyL.Hint">
        <item name="android:gravity">top</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

</resources>
